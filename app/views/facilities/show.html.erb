<div class ="container">
  <div class= "row">
    <div class= "col-xs-12">
      <h2>詳細画面</h2>
    </div>
  </div>
    <div class= "row">
      <div class= "col-xs-7">
        <h3>施設画像</h3>
      <div class="img"><%= attachment_image_tag @facility,:facility_image,:fill,400,316,format:'jpeg' %></div>
      </div>
      <div class= "col-xs-5">
        <h3>施設紹介</h3>
        <table class= "table">
        <tbody>
          <tr>
            <td>施設名</td>
            <td><%= @facility.facility_name %></td>
          </tr>
          <tr>
            <td>カテゴリ</td>
            <td><%= @facility.category.category_name %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @facility.address %></td>
          </tr>
          <tr>
            <td>解放日</td>
            <td><%= @facility.date%></td>
          </tr>
          <tr>
            <td>解放時間</td>
            <td><%= @facility.lending_time %></td>
          </tr>
          <tr>
            <td>TEL</td>
            <td><%= @facility.facility_phone %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= @facility.introduction %></td>
          </tr>
          </tbody>

        </table>
          <%= link_to '新規予約する', new_event_path(@facility.id), class: 'btn btn-danger', style:"width:50%;"%>
      </div>
    </div>
    <br>
    <br>
    <div class="row">
      <div class="col-xs-12">
      <div id="calendar"></div>
      </div>
    </div>
</div>
<script>
$('#calendar').fullCalendar({
  events: [
    <% @events.each do |event| %>
    {

      title:'<%= event.title %> <%= event.people %>',
      start:'<%= event.start_at.strftime("%Y-%m-%d %H:%M") %>',
      end: '<%= event.end_at.strftime("%Y-%m-%d %H:%M") %>'
    },
    <% end %>
  ],
  //カレンダー上部を年月で表示
  titleFormat: 'YYYY年 M月',
  //曜日
  dayNamesShort: ['日', '月', '火', '水', '木', '金', '土'],
  //ボタン
  header: {
      left: 'title',
      center: '',
      right: 'today prev,next'
  },
  //終了時刻がないイベントの表示間隔
  defaultTimedEventDuration: '03:00:00',
  buttonText: {
      prev: '前',
      next: '次',
      prevYear: '前年',
      nextYear: '翌年',
      today: '今日',
      month: '月',
      week: '週',
      day: '日'
  },
  // Drag & Drop & Resize
  editable: true,
  // 時間の書式
  timeFormat: 'HH:mm',
  //イベントの文字色
  eventTextColor: '#ffffff',
});
</script>
