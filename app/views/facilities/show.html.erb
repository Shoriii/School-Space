<div class ="container">
  <div class= "row">
    <div class= "col-xs-12">
      <h2>詳細画面</h2>
    </div>
  </div>
  <div class="row">
    <div class= "col-xs-3">
        <div class="sidebar">
        <div class="sidebar-title"><%= link_to '基本情報', facility_path(@facility.id) %></div>
        <div class="sidebar-title"><%= link_to 'コート一覧', sub_facility_facilities_path(@facility.id) %></div>
        <div class="sidebar-title"><%= link_to 'カレンダー', facilities_calendar_path(@facility.id) %></div>
        </div>
        <%= link_to '新規予約する', new_event_path(@facility.id), class: 'btn btn-danger', style:"width:100%;"%>
    </div>
    <div class= "col-xs-9">
      <%= render 'show_list', facility: @facility %>
      <% if customer_signed_in? %>
       <h3>コメント投稿</h3>
      <div class="comment-form">
      <%= form_with model: [@facility, @facility_comment], data:{ remote: true } do |f| %>
        <%= f.text_area :comment, style:'width:100%;height:100px;' %>
        <div class="comment-btn">
        <%= f.submit '送信', class:'btn btn-primary' %>
        </div>
      <% end %>
      </div>
     <% end %>
    </div>
  </div>
</div>