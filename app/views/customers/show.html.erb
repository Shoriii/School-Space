<div class="container">
    <div class="row">
      <div class="col-xs-5">
        <h3>マイページ</h3>
        <label>登録情報</label>
          <%= link_to "編集する", edit_customer_path, class:"btn btn-default" %>
          <%= link_to "パスワードを変更する", customer_path, class:"btn btn-default" %>

            <table class="table">
              <tr>
               <td>氏名</td>
               <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
              </tr>
              <tr>
            	 <td>カナ</td>
               <td><%= current_customer.kana_last_name %><%= current_customer.kana_first_name %></td>
              </tr>
              <tr>
            	 <td>電話番号</td>
               <td><%= current_customer.telephone %></td>
              </tr>
              <tr>
            	 <td>メールアドレス</td>
               <td><%= current_customer.email %></td>
              </tr>
            </table>
            <label>予約一覧</label>
            <%= link_to "一覧を見る", events_path, class:"btn btn-default next" %>
      </div>
    </div>
</div>