<div class="container">
<h2>パスワードをお忘れの方</h2>
<h3>登録情報</h3>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <div class="col-xs-3">
      <h4>メールアドレス</h4>
  </div>
  <div class="col-xs-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "shoolspace@example.co.jp" %>
  </div>
</div>
  <div class="row">
    <div class="col-xs-3">
    </div>
      <div class="col-xs-8">
     <p><%= f.submit "パスワード再発行", class:"btn btn-primary" %></p>
       <% end %>
    </div>
</div>