<div class="container">
    <div class="row">
      <div class="col-xs-5">
        <h3>登録情報編集画面</h3>
        <label>会員情報の編集</label><%= link_to "退会する", withdraw_customer_path, class:"btn btn-danger delete" %>
          <%= form_for(@customer) do |f| %>
            <table class="table">
              <tr>
               <td>氏名</td>
               <td><%= f.text_field:last_name %> <%= f.text_field:last_name %></td>
              </tr>
              <tr>
            	 <td>カナ</td>
               <td><%= f.text_field:kana_last_name %> <%= f.text_field:kana_last_name %></td>
              </tr>
              <tr>
            	 <td>電話番号</td>
               <td><%= f.text_field:telephone %></td>
              </tr>
              <tr>
            	 <td>メールアドレス</td>
               <td><%= f.text_field:email %></td>
              </tr>
            </table>
            <%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
</div>