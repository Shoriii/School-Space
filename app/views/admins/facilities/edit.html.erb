<div class ="container">
  <div class= "row">
    <div class= "col-xs-3">
      <h2>編集画面</h2>
    </div>
  </div>
    <div class= "row">
    <%= form_for(@facility, url:admins_facility_path(@facility.id)) do |f| %>
      <div class= "col-xs-7">
      <%= attachment_image_tag @facility,:facility_image,:fill,400,300,format:'jpeg' %>
              <%= f.attachment_field :facility_image %>
      </div>
      <div class= "col-xs-5">
        <table class= "table">
        <tbody>
          <tr class="table-box">
            <td class="table-title">施設名</td>
            <td><%= f.text_field :facility_name %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">カテゴリ</td>
            <td><%= f.collection_select :category_id, Category.all, :id, :category_name, include_blank: "--選択してください--" %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">住所</td>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">解放日</td>
            <td><%= f.text_field :date%></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">解放時間</td>
            <td><%= f.text_field :lending_time %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">TEL</td>
            <td><%= f.text_field :facility_phone %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">紹介文</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr class="table-box">
            <td class="table-title">使用ステータス</td>
            <td><%= f.select :use_status,[["使用可",true],["使用不可",false]] %></td>
          </tr>
          </tbody>

        </table>
        <%= f.submit "変更する" ,class:"btn btn-primary next", style:"width:50%;"%>
      </div>
      <% end %>
    </div>
</div>