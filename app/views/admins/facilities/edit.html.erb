<div class ="container">
  <div class= "row">
    <div class= "col-xs-3">
      <h2>編集画面</h2>
    </div>
  </div>
    <div class= "row">
    <%= form_for(@facility, url:admins_facility_path(@facility.id)) do |f| %>
      <div class= "col-xs-3">
      <%= attachment_image_tag @facility,:facility_image,:fill,60,60,format:'jpeg' %>
              <%= f.attachment_field :facility_image %>
      </div>
      <div class= "col-xs-9">
        <table class= "table">
        <tbody>
          <tr>
            <td>施設名</td>
            <td><%= f.text_field :facility_name %></td>
          </tr>
          <tr>
            <td>カテゴリ</td>
            <td><%= f.collection_select :category_id, Category.all, :id, :category_name, include_blank: "--選択してください--" %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_area :address %></td>
          </tr>
          <tr>
            <td>解放日</td>
            <td><%= f.text_field :date%></td>
          </tr>
          <tr>
            <td>解放時間</td>
            <td><%= f.text_field :lending_time %></td>
          </tr>
          <tr>
            <td>TEL</td>
            <td><%= f.text_field :facility_phone %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td>使用ステータス</td>
            <td><%= f.select :use_status,[["使用可",true],["使用不可",false]] %></td>
          </tr>
          </tbody>

        </table>
        <%= f.submit "変更" ,class:"btn btn-primary next"%>
      </div>
      <% end %>
    </div>
</div>