<div class ="container">
  <div class= "row">
    <div class= "col-xs-12">
      <h2>詳細画面</h2>
    </div>
  </div>
    <div class="row">
      <div class= "col-xs-3">
        <div class="sidebar">
        <%= link_to(admins_facility_path(@facility.id), class: 'list-content') do %>
         <div class="sidebar-title">基本情報</div>
        <% end %>
        <%= link_to(admins_facility_path(@facility.id), class: 'list-content') do %>
        <div class="sidebar-title">コート一覧</div>
        <% end %>
         <%= link_to(admins_facilities_calendar_path(@facility.id), class: 'list-content') do %>
        <div class="sidebar-title">カレンダー</div>
        <% end %>
        </div>
        <%= link_to '編集する', edit_admins_facility_path, class: 'btn btn-primary', style:"width:100%;"%>
        </div>
        <div class= "col-xs-9">
        <h3>施設画像</h3>
        <div class="sub-img"><%= attachment_image_tag @facility,:facility_image,:fill,680,400,format:'jpeg',fallback: "no_image.jpg" %>
        <span id="favorite" class="glyphicon glyphicon-heart-empty"><%= @facility.favorites.count %></span></div>
        <h3>施設紹介</h3>
        <table class= "table">
        <tbody>
          <tr>
            <td>施設名</td>
            <td><%= @facility.facility_name %></td>
          </tr>

            <td>住所</td>
            <td><%= @facility.address %></td>
          </tr>
          <tr>
            <td>解放日</td>
            <td><%= @facility.date%></td>
          </tr>
          <tr>
            <td>解放時間</td>
            <td><%= @facility.lending_time %></td>
          </tr>
          <tr>
            <td>TEL</td>
            <td><%= @facility.facility_phone %></td>
          </tr>
          <tr>
            <td>紹介文</td>
            <td><%= @facility.introduction %></td>
          </tr>
          </tbody>
      </table>
      <!--コメント-->
      <h3>コメント一覧</h3>
      <div id="js-comment">
      <%= render 'facility_comments/comments', facility_comments: @facility_comments %>
      </div>
    </div>
  </div>
</div>