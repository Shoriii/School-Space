<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>お知らせ編集</h2>
    </div>
  </div>
  <div class="row">
   <%= form_for(@information, url:admins_informations_path) do |f| %>
    <h3>投稿内容</h3>
      <div class="information-heading">Facility</div>
        <div class="information-title">
          <%= f.collection_select :facility_id, Facility.all, :id, :facility_name, include_blank: "--選択してください--" %>
        </div>
      <div class="information-heading">Title</div>
        <div class="information-title">
          <%= f.text_field :title %>
        </div>
      <div class="information-heading">Body</div>
        <div class="information-title">
          <%= f.text_area :body %>
        </div>
        <%= f.submit class: "btn btn-primary " %>
    <% end %>
  </div>
</div>