<div class="container">
    <div class="row">
      <div class="col-xs-5">
        <h3>登録情報編集画面</h3>
        <label>会員情報の編集</label>
          <%= form_for(@customer,url:admins_customer_path) do |f| %>
            <table class="table">
              <tr>
               <td>氏名（姓）</td>
               <td><%= f.text_field:last_name %></td>
              </tr>
              <tr>
               <td>氏名（名）</td>
               <td><%= f.text_field:first_name %></td>
              </tr>
              <tr>
            	 <td>氏名カナ（セイ）</td>
               <td><%= f.text_field:kana_last_name %></td>
              </tr>
              <tr>
            	 <td>氏名カナ（メイ）</td>
               <td><%= f.text_field:kana_first_name %></td>
              </tr>
              <tr>
            	 <td>電話番号</td>
               <td><%= f.text_field:telephone %></td>
              </tr>
              <tr>
            	 <td>メールアドレス</td>
               <td><%= f.text_field:email %></td>
              </tr>
              <tr>
            	 <td>会員ステータス</td>
               <td><%= f.select :member_status,[["有効",true],["退会",false]]  %></td>
              </tr>
            </table>
            <%= f.submit "編集内容を保存する", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
</div>