<div class="container">
  <div class= "row">
  <div class="col-xs-12">
  <h2>コート一覧</h2>
  </div>
  </div>
  <div class= "row">
  <%= link_to '新規登録', new_admins_sub_facility_path, class:'btn btn-primary', style:'float:right;'%>
      <table class="table">
          <tr class="border">
            <th>施設名</th>
            <th>コート</th>
            <th>コートナンバー</th>
            <th>カテゴリ</th>
            <th>ステータス</th>
          </tr>
      <tbody>
        <% @sub_facilities.each do |sub_facility| %>
        <tr>
          <td><%= sub_facility.facility.facility_name %></td>
          <td><%= sub_facility.sub_number %></td>
          <td><%= sub_facility.sub_name %></td>
          <td><%= sub_facility.category.category_name %></td>
          <% if  sub_facility.use_status == true %>
          <td><%= link_to '使用可', admins_sub_facility_path(sub_facility), class:'btn btn-success'%></td>
          <% else  sub_facility.use_status == false %>
          <td><%= link_to '使用不可', admins_sub_facility_path(sub_facility), class:'btn btn-danger'%></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
        </table>
    </div>
    <%= paginate @sub_facilities, class: "paginate" %>
</div>