<div class = "container">
  <div class= "row">
    <div class="col-xs-10 col-xs-offset-1">

        <h2>カテゴリ追加・一覧画面</h2>

        <!-- new category form -->
        <%= form_for :category,url: admins_categories_path do |f| %>
          <div class="form-inline">
          <div class="form-group">
            <label>カテゴリ<%= f.text_field :category_name %></label>
          </div>
          <div class="form-group">
            <label>
                <%= f.radio_button :display, 'true' %>有効
              </label>
              <label>
              <%= f.radio_button :display, 'false' %>無効
              </label>
          </div>
            <div class="form-group">
            <label><%= f.submit '追加', class:"btn btn-primary" %></label>
            </div>
          </div>
        <% end %>
        <!-- category index -->
        <table class="table category-index">
          <thead>
            <tr class="border">
              <th>カテゴリ</th>
              <th>状態</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td><%= category.category_name %></td>
              <% if category.display == true %>
              <td>有効</td>
              <% else category.display == false %>
              <td>無効</td>
              <% end %>
              <td><%= link_to '編集', edit_admins_category_path(category.id), class:"btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

  </div>
</div>
