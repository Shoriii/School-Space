<div class="container">
  <div class="row">
  <div class="col-xs-12">
  <h2>予約詳細画面</h2>
  </div>
  </div>
    <div class="row">
      <div class="col-xs-6">
        <h3>予約者情報</h3>
          <table class="table">
            <tr>
              <td>予約者氏名（姓）</td>
              <td><%= @event.customer.last_name %></td>
            </tr>
            <tr>
              <td>予約者氏名（名）</td>
              <td><%= @event.customer.first_name %></td>
            </tr>
            <tr>
              <td>予約者氏名カナ（セイ）</td>
              <td><%= @event.customer.kana_last_name %></td>
            </tr>
            <tr>
              <td>予約者氏名カナ（メイ）</td>
              <td><%= @event.customer.kana_first_name %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @event.customer.telephone %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= @event.customer.email %></td>
            </tr>
          </table>
      </div>
      <div class="col-xs-6">
        <h3>予約内容</h3>
          <table class="table">
            <tr>
              <td>予約状況</td>
              <td><%= @event.title %></td>
            </tr>
            <tr>
              <td>予約施設</td>
              <td><%= @event.facility.facility_name %></td>
            </tr>
          <tr>
            <td>コートナンバー</td>
            <td><%= @event.number %></td>
          </tr>
            <tr>
              <td>ご利用開始時間</td>
              <td><%= @event.start_at.strftime("%Y年%m月%d日 %H:%M") %></td>
            </tr>
            <tr>
              <td>ご利用終了時間</td>
              <td><%= @event.end_at.strftime("%Y年%m月%d日 %H:%M") %></td>
            </tr>
            <tr>
              <td>ご利用人数</td>
              <td><%= @event.people %></td>
            </tr>
          </table>
      </div>
      	<% if @event.title == "予約済" %>
        <%= form_for(@event) do |f| %>
        <%= f.hidden_field :title, :value => "キャンセル済" %>
        <%= f.submit "キャンセルする" ,"data-confirm" => "本当にキャンセルしますか？",class:"btn btn-danger" %>
        <% end %>
        <% end %>
    </div>
</div>