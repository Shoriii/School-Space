<div class="container">
	<h2>予約一覧画面</h2>
	<table class="table">
			<tr class="border">
				<th>予約日</th>
				<th>予約者</th>
        <th>ご利用人数</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		<tbody>
			<% @events.each do |event| %>
			<tr>
				<td><%= event.start_at.strftime("%Y-%m-%d") %></td>
				<td><%= event.customer.last_name %><%= event.customer.first_name %></td>
				<td><%= event.people %></td>
				<td><%= event.title %></td>
				<% if event.title == "予約済" %>
				<td><%= link_to '表示する', event_path(event.id), class:'btn btn-primary' %></td>
				<% else %>
				<td>キャンセル済です</td>
				<% end %>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @events, class: "paginate" %>
</div>