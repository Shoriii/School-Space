<div class= "container">
    <div class= "row">
      <div class="facilities-box">
      <h2>お気に入り施設一覧</h2>
       <% @favorites.each do |favorite| %>
          <div class="facility-area">
							<%= link_to(facility_path(@facility), class: 'list-content') do %>
                <%= attachment_image_tag favorite.facility.facility_image,:facility_image,:fill,280,200,format:'jpeg',fallback: "no_image.jpg" %>
                <p>
                  <ul class="facility-heading">施設名</ul><li> <%= favorite.facility.facility_name %></li><br>
                  <ul class="facility-heading">解放日</ul><li> <%= favorite.facility.date%></li><br>
                  <ul class="facility-heading">解放時間</ul><li> <%= favorite.facility.lending_time  %></li>
                </p>
				     <%end%>
            </div>
					<% end %>
      </div>
    </div>
    <%#= paginate @facilities, class: "paginate" %>
</div>
