  <!-- メインビジュアル -->
  <section id="mv">
    <div class="container">
      <h1 class="mv-title">School-Space</h1>
      <h4 class="mv-subtitle">スクスペ</h4>
      <p class="mv-text">誰でも、気軽に、簡単に、施設を予約できます。</p>
      <div class="btn-wrapper">
        <% if customer_signed_in? %>
          <div class="btn-top">
            <p><%=link_to "施設を予約する", facilities_path, class: "btn btn-danger center-block", style:"width:50%;" %></p>
          </div>
          <% else %>
          <div class="btn-top">
            <p><%=link_to "ログイン", new_customer_session_path, class: "btn btn-info center-block", style:"width:50%;" %></p>
            <p><%=link_to "新規会員登録", new_customer_registration_path, class: "btn btn-warning center-block", style:"width:50%;" %></p>
          </div>
        <% end %>
        </div>
      </div>
  </section>

  <!-- カテゴリ -->
  <section id="category">
    <div class="container">
      <h2>全てのカテゴリ</h2>
      <div class="category-box clearfix">
        <div class="category box1"><a href="/facilities?category_name=バスケットボール">
        <p class="box-title">バスケットボール</p>
        </a>
        </div>
        <div class="category box2"><a href="/facilities?category_name=テニス">
        <p class="box-title">テニス</p>
        </a>
        </div>
        <div class="category box3"><a href="/facilities?category_name=卓球">
        <p class="box-title">卓球</p>
        </a>
        </div>
        <div class="category box4"><a href="/facilities?category_name=水泳">
        <p class="box-title">水泳</p>
        </a>
        </div>
        <div class="category box5"><a href="/facilities?category_name=バレーボール">
        <p class="box-title">バレーボール</p>
        </a>
        </div>
        <div class="category box6"><a href="/facilities?category_name=バドミントン">
        <p class="box-title">バドミントン</p>
        </a>
        </div>
      </div>
    </div>
  </section>

  <!-- 予約施設 -->
  <section id="event">
    <div class="container">
      <h2>最近予約された施設</h2>
      <div class="facilities-box clearfix">
        <% @events.each do |event| %>
          <div class="facility-area">
							<%= link_to(facility_path(event.facility), class: 'list-content') do %>
                <%= attachment_image_tag event.facility,:facility_image,:fill,294,250,format:'jpeg' %>
                <p>
                  <ul class="facility-heading">施設名</ul><li> <%= event.facility.facility_name %></li><br>
                  <ul class="facility-heading">解放日</ul><li> <%= event.facility.date%></li><br>
                  <ul class="facility-heading">解放時間</ul><li> <%= event.facility.lending_time  %></li>
                </p>
				     <%end%>
            </div>
					<% end %>
      </div>
    </div>
  </section>
  <!-- 追加施設 -->
  <section id="facility">
    <div class="container">
      <h2>最近追加された施設</h2>
      <div class="facilities-box clearfix">
        <% @facilities.each do |facility| %>
          <div class="facility-area">
							<%= link_to(facility_path(facility), class: 'list-content') do %>
                <%= attachment_image_tag facility,:facility_image,:fill,294,250,format:'jpeg' %>
                <p>
                  <ul class="facility-heading">施設名</ul><li> <%= facility.facility_name %></li><br>
                  <ul class="facility-heading">解放日</ul><li> <%= facility.date%></li><br>
                  <ul class="facility-heading">解放時間</ul><li> <%= facility.lending_time  %></li>
                </p>
				     <%end%>
            </div>
					<% end %>
      </div>
    </div>
  </section>